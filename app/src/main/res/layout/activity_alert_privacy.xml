<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <TextView
        android:id="@+id/privacy_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="This privacy policy has been compiled to better serve those who are concerned with how their &apos;Personally Identifiable Information&apos; (PII) is being used online. PII, as described in US privacy law and information security, is information that can be used on its own or with other information to identify, contact, or locate a single person, or to identify an individual in context. Please read our privacy policy carefully to get a clear understanding of how we collect, use, protect or otherwise handle your Personally Identifiable Information in accordance with our website."
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/black"
        android:visibility="visible" />

    <TextView
        android:id="@+id/priv_qus_txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/privacy_txt"
        android:layout_marginTop="10dp"
        android:text="What personal information do we collect from the people that visit our blog, website or app?"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:visibility="visible" />

    <TextView
        android:id="@+id/priv_ans_txt1"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/priv_qus_txt1"
        android:layout_marginTop="5dp"
        android:text="\t\tWe do not collect information from visitors of our site. \n\t\tor other details to help you with your experience."
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/black" />


    <TextView
        android:id="@+id/priv_qus_txt2"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/priv_ans_txt1"
        android:text="When do we collect information?"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="\t\tWe collect information from you when you or enter information on our site.  \n\t\tProvide us with feedback on our products or services "
        android:id="@+id/priv_ans_txt2"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/priv_qus_txt2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="How do we use your information? "
        android:id="@+id/priv_qus_txt3"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/priv_ans_txt2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="\t\tWe may use the information we collect from you when you register, make a purchase, sign up for our newsletter, respond to a survey or marketing communication, surf the website, or use certain other site features in the following ways:\n        • To ask for ratings and reviews of services or products"
        android:id="@+id/priv_ans_txt3"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/priv_qus_txt3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="How do we protect your information?"
        android:id="@+id/priv_qus_txt4"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/priv_ans_txt3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="\t\tWe do not use vulnerability scanning and/or scanning to PCI standards. \n\t\tWe only provide articles and information. \n\t\tWe never ask for credit card numbers. \n\t\tWe use regular Malware Scanning.\n\t\tWe do not use an SSL certificate\n\t\t       • We do not need an SSL because: we just transmit a simple contents"
        android:id="@+id/priv_ans_txt4"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/priv_qus_txt4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Do we use &apos;cookies&apos;?"
        android:id="@+id/priv_qus_txt5"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/priv_ans_txt4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="\t\tWe do not use cookies for tracking purposes\n\t\tYou can choose to have your computer warn you each time a cookie is being sent, or you can choose to turn off all cookies. You do this through your browser settings. Since browser is a little different, look at your browser&apos;s Help Menu to learn the correct way to modify your cookies.  \n\t\tIf you turn cookies off, some features will be disabled. that make your site experience more efficient and may not function properly.  \n\t\tHowever, you will still be able to place orders ."
        android:id="@+id/priv_ans_txt5"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        android:visibility="visible"
        android:layout_below="@+id/priv_qus_txt5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Third-party disclosure"
        android:id="@+id/priv_qus_txt6"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/priv_ans_txt5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="\t\tWe do not sell, trade, or otherwise transfer to outside parties your Personally Identifiable Information unless we provide users with advance notice. This does not include website hosting partners and other parties who assist us in operating our website, conducting our business, or serving our users, so long as those parties agree to keep this information confidential. We may also release information when it&apos;s release is appropriate to comply with the law, enforce our site policies, or protect ours or others&apos; rights, property or safety.   \n\t\tHowever, non-personally identifiable visitor information may be provided to other parties for marketing, advertising, or other uses."
        android:id="@+id/priv_ans_txt6"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:layout_below="@+id/priv_qus_txt6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="visible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Third-party links"
        android:id="@+id/priv_qus_txt7"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/priv_ans_txt6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="visible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="\t\tOccasionally, at our discretion, we may include or offer third-party products or services on our website. These third-party sites have separate and independent privacy policies. We therefore have no responsibility or liability for the content and activities of these linked sites. Nonetheless, we seek to protect the integrity of our site and welcome any feedback about these sites."
        android:id="@+id/priv_ans_txt7"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:layout_below="@+id/priv_qus_txt7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="visible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Google"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:id="@+id/priv_qus_txt8"
        android:layout_below="@+id/priv_ans_txt7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="visible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="\t\tGoogle&apos;s advertising requirements can be summed up by Google&apos;s Advertising Principles. They are put in place to provide a positive experience for users. https://support.google.com/adwordspolicy/answer/1316548?hl=en   \n\t\tWe have not enabled Google AdSense on our site but we may do so in the future."
        android:id="@+id/priv_ans_txt8"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:layout_below="@+id/priv_qus_txt8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="visible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="California Online Privacy Protection Act "
        android:id="@+id/priv_qus_txt9"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/priv_ans_txt8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="visible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="\t\tCalOPPA is the first state law in the nation to require commercial websites and online services to post a privacy policy. The law&apos;s reach stretches well beyond California to require any person or company in the United States (and conceivably the world) that operates websites collecting Personally Identifiable Information from California consumers to post a conspicuous privacy policy on its website stating exactly the information being collected and those individuals or companies with whom it is being shared. - See more at: http://consumercal.org/california-online-privacy-protection-act-caloppa/#sthash.0FdRbT51.dpuf"
        android:id="@+id/priv_ans_txt9"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/priv_qus_txt9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="visible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="According to CalOPPA, we agree to the following:"
        android:id="@+id/priv_qus_txt10"
        android:layout_below="@+id/priv_ans_txt9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="visible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="\t\tUsers can visit our site anonymously. \n\t\tOnce this privacy policy is created, we will add a link to it on our home page or as a minimum, on the first significant page after entering our website. \n\t\tOur Privacy Policy link includes the word &apos;Privacy&apos; and can be easily be found on the page specified above.  You will be notified of any Privacy Policy changes:\n\t\t       • Via Email Can change your personal information:\n\t\t       • By calling us "
        android:id="@+id/priv_ans_txt10"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/priv_qus_txt10"
        android:layout_alignLeft="@+id/priv_qus_txt10"
        android:layout_alignStart="@+id/priv_qus_txt10"
        android:visibility="visible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="How does our site handle Do Not Track signals?"
        android:id="@+id/priv_qus_txt11"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/priv_ans_txt10"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="visible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="\t\tWe honor Do Not Track signals and Do Not Track, plant cookies, or use advertising when a Do Not Track (DNT) browser mechanism is in place."
        android:id="@+id/priv_ans_txt11"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/priv_qus_txt11"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="visible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Does our site allow third-party behavioral tracking?"
        android:id="@+id/priv_qus_txt12"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/priv_ans_txt11"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="visible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="\t\tIt&apos;s also important to note that we allow third-party behavioral tracking"
        android:id="@+id/priv_ans_txt12"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/priv_qus_txt12"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="visible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="COPPA (Children Online Privacy Protection Act)"
        android:id="@+id/priv_qus_txt13"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/priv_ans_txt12"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="visible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="\t\tWhen it comes to the collection of personal information from children under the age of 13 years old, the Children&apos;s Online Privacy Protection Act (COPPA) puts parents in control. The Federal Trade Commission, United States&apos; consumer protection agency, enforces the COPPA Rule, which spells out what operators of websites and online services must do to protect children&apos;s privacy and safety online.\n\t\tWe do not specifically market to children under the age of 13 years old."
        android:id="@+id/priv_ans_txt13"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/priv_qus_txt13"
        android:layout_alignLeft="@+id/priv_qus_txt13"
        android:layout_alignStart="@+id/priv_qus_txt13"
        android:visibility="visible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Fair Information Practices "
        android:id="@+id/priv_qus_txt14"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/priv_ans_txt13"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="\t\tThe Fair Information Practices Principles form the backbone of privacy law in the United States and the concepts they include have played a significant role in the development of data protection laws around the globe. Understanding the Fair Information Practice Principles and how they should be implemented is critical to comply with the various privacy laws that protect personal information."
        android:id="@+id/priv_ans_txt14"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/priv_qus_txt14"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    </RelativeLayout>

    </ScrollView>


</RelativeLayout>
